@page "/forgot-password"
@page "/sifremi-unuttum"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Şifremi Unuttum</PageTitle>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-warning text-dark text-center py-3">
            <h4 class="mb-0">Şifre Sıfırlama</h4>
            <div class="small">E-posta adresinizi girin</div>
        </div>
        
        <div class="card-body p-4">
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-@(isSuccess ? "success" : "danger")" role="alert">
                    <i class="bi bi-@(isSuccess ? "check-circle" : "exclamation-triangle") me-2"></i>
                    @message
                </div>
            }

            <EditForm Model="model" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <InputText @bind-Value="model.Email" class="form-control" id="email" 
                                   placeholder="ornek@email.com" disabled="@isLoading" />
                    </div>
                    <ValidationMessage For="@(() => model.Email)" class="text-danger" />
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-warning" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        <i class="bi bi-send me-2"></i>
                        Sıfırlama Linki Gönder
                    </button>
                </div>
            </EditForm>

            <div class="text-center">
                <div class="small text-muted mb-2">Şifrenizi hatırladınız mı?</div>
                <a href="/login" class="btn btn-link btn-sm">
                    <i class="bi bi-arrow-left me-2"></i>
                    Giriş Sayfasına Dön
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private PasswordResetRequestModel model = new();
    private bool isLoading = false;
    private string message = string.Empty;
    private bool isSuccess = false;

    private async Task HandleSubmit()
    {
        isLoading = true;
        message = string.Empty;
        
        try
        {
            var response = await Http.PostAsJsonAsync("/api/passwordreset/request-reset", new { email = model.Email });
            
            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                message = "Şifre sıfırlama linki e-posta adresinize gönderildi. E-postanızı kontrol edin.";
                model.Email = string.Empty; // Clear the form
            }
            else
            {
                isSuccess = false;
                message = "Bir hata oluştu. Lütfen tekrar deneyin.";
            }
        }
        catch (Exception)
        {
            isSuccess = false;
            message = "Bağlantı hatası. Lütfen internet bağlantınızı kontrol edin.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public class PasswordResetRequestModel
    {
        [Required(ErrorMessage = "E-posta adresi zorunludur.")]
        [EmailAddress(ErrorMessage = "Geçerli bir e-posta adresi girin.")]
        public string Email { get; set; } = string.Empty;
    }
}