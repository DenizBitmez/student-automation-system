@page "/ogrenci/devamsizlik"
@using StudentManagementFrontend.Services
@using StudentManagementFrontend.Models
@inject IAttendanceService AttendanceService
@inject IReportService ReportService
@attribute [Authorize(Roles = "Student")]

<div class="animate-fade-in">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="bg-info-gradient p-3 rounded-3 shadow-glow">
                <i class="bi bi-calendar-check-fill text-white fs-4"></i>
            </div>
            <div>
                <h2 class="h3 fw-bold mb-0">Devamsızlık Durumum</h2>
                <p class="text-muted mb-0">Ders katılım geçmişinizi ve toplam devamsızlıklarınızı görün.</p>
            </div>
        </div>
        <button class="btn btn-outline-info shadow-sm px-4" @onclick="DownloadRapor">
            <i class="bi bi-file-earmark-pdf me-2"></i>Rapor İndir
        </button>
    </div>

    @if (attendanceRecords == null)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
             <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-primary-gradient text-white">
                    <div class="card-body p-4">
                        <h6 class="text-white opacity-75 fw-bold text-uppercase small mb-2">Toplam Katılım</h6>
                        <h2 class="fw-bold mb-0">@attendanceRecords.Count(r => r.Present)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-danger text-white">
                    <div class="card-body p-4">
                        <h6 class="text-white opacity-75 fw-bold text-uppercase small mb-2">Toplam Devamsızlık</h6>
                        <h2 class="fw-bold mb-0">@attendanceRecords.Count(r => !r.Present)</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header bg-white py-3">
                <h5 class="fw-bold mb-0">Katılım Detayları</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Tarih</th>
                            <th>Ders</th>
                            <th class="text-center">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in attendanceRecords)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">@record.Date.ToString("dd MMMM yyyy")</div>
                                    <small class="text-muted">@record.Date.ToString("HH:mm")</small>
                                </td>
                                <td>@record.Name</td>
                                <td class="text-center">
                                    @if (record.Present)
                                    {
                                        <span class="badge bg-success-subtle text-success rounded-pill px-3">Derste</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger rounded-pill px-3">Yok</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<AttendanceRecordDto>? attendanceRecords;

    protected override async Task OnInitializedAsync()
    {
        attendanceRecords = await AttendanceService.GetMyAttendanceAsync();
    }

    private async Task DownloadRapor()
    {
        await ReportService.DownloadMyAttendancePdfAsync();
    }
}
