@code {
    private ClaimsPrincipal? currentUser;
    private bool isLoading = true;
    private int totalStudents = 0;
    private int totalTeachers = 0;
    private int totalCourses = 0;
    private int totalEnrollments = 0;

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isLoading = true;
            StateHasChanged();

            if (AuthenticationStateTask != null)
            {
                 var authState = await AuthenticationStateTask;
                 currentUser = authState.User;
                 
                 if (currentUser.Identity?.IsAuthenticated == true)
                 {
                     if (currentUser.IsInRole("Admin") || currentUser.IsInRole("Teacher"))
                     {
                         await LoadDashboardData();
                     }
                 }
            }
            // Logic for non-cascading fallback omitted as cascading is standard
            
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            // Load basic statistics
            var students = await StudentService.GetAllStudentsAsync();
            totalStudents = students.Count();
            
            totalTeachers = await TeacherService.GetTeacherCountAsync();
            totalCourses = await CourseService.GetTotalCourseCountAsync();
            
            // For enrollments, we might need a specific endpoint, 
            // but for now we'll sum up students from courses if possible or use a placeholder
            // Actually, let's just use the courses list to get enrollment count
            var courses = await CourseService.GetAllCoursesAsync();
            totalEnrollments = courses.Sum(c => c.StudentCount);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Dashboard data loading error: {ex.Message}");
        }
    }
}