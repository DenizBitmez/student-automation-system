@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Ana Sayfa - Öğrenci Otomasyon Sistemi</PageTitle>

<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container relative-z">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 animate-slide-up">
                <div class="hero-content">
                    <div class="badge bg-white text-primary mb-3 px-3 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-stars me-1"></i> Yeni Nesil Otomasyon
                    </div>
                    <h1 class="display-3 fw-bold text-white mb-4 lh-sm">
                        Eğitim Süreçlerinizi <br/>
                        <span class="text-warning">Dijitalleştirin</span>
                    </h1>
                    <p class="lead text-white-50 mb-5 fs-5 w-75">
                        Öğrenci, öğretmen ve ders yönetimini tek bir modern platformda birleştirin. 
                        Güvenli, hızlı ve kullanıcı dostu deneyim.
                    </p>
                    
                    <AuthorizeView>
                        <Authorized>
                            <div class="d-flex gap-3">
                                <a href="/dashboard" class="btn btn-light btn-lg text-primary fw-bold shadow-lg hover-scale">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    Panele Git
                                </a>
                                <a href="/profil" class="btn btn-outline-light btn-lg hover-scale">
                                    <i class="bi bi-person-circle me-2"></i>
                                    Profilim
                                </a>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="d-flex gap-3">
                                <a href="/giris" class="btn btn-light btn-lg text-primary fw-bold shadow-lg hover-scale">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Giriş Yap
                                </a>
                                <a href="/kayit" class="btn btn-outline-light btn-lg hover-scale">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Kayıt Ol
                                </a>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-cards ps-5">
                    <div class="feature-card glass-card float-anim-1">
                        <div class="icon-sq bg-primary-light text-primary mb-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h5>Öğrenci Yönetimi</h5>
                        <p class="text-muted small mb-0">Detaylı öğrenci takibi ve analizi</p>
                    </div>
                    <div class="feature-card glass-card float-anim-2 ms-5 mt-4">
                        <div class="icon-sq bg-success-light text-success mb-3">
                            <i class="bi bi-journal-bookmark-fill"></i>
                        </div>
                        <h5>Ders Programı</h5>
                        <p class="text-muted small mb-0">Akıllı ders ve sınav planlama</p>
                    </div>
                    <div class="feature-card glass-card float-anim-3 mt-4">
                        <div class="icon-sq bg-warning-light text-warning mb-3">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <h5>Başarı Analizi</h5>
                        <p class="text-muted small mb-0">Gelişmiş raporlama araçları</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section py-6">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <span class="text-primary fw-bold text-uppercase letter-spacing-1">Özellikler</span>
                <h2 class="fw-bold display-6 mt-2 mb-3">Neden Bizi Seçmelisiniz?</h2>
                <p class="lead text-muted">Eğitim kurumunuzun tüm ihtiyaçlarına cevap veren kapsamlı çözümler</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-item p-4 rounded-4 hover-lift">
                    <div class="feature-icon mb-4 text-primary bg-primary-subtle rounded-3 p-3 d-inline-block">
                        <i class="bi bi-shield-check fs-2"></i>
                    </div>
                    <h4>Güvenli Altyapı</h4>
                    <p class="text-muted">Verileriniz endüstri standardı şifreleme yöntemleriyle her zaman güvende.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item p-4 rounded-4 hover-lift">
                    <div class="feature-icon mb-4 text-success bg-success-subtle rounded-3 p-3 d-inline-block">
                        <i class="bi bi-lightning-charge fs-2"></i>
                    </div>
                    <h4>Yüksek Performans</h4>
                    <p class="text-muted">Modern teknolojilerle geliştirilmiş, hızlı ve kesintisiz deneyim.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item p-4 rounded-4 hover-lift">
                    <div class="feature-icon mb-4 text-info bg-info-subtle rounded-3 p-3 d-inline-block">
                        <i class="bi bi-phone fs-2"></i>
                    </div>
                    <h4>Mobil Uyumlu</h4>
                    <p class="text-muted">Tablet ve telefonlarınızdan her an her yerden erişim imkanı.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
        position: relative;
        overflow: hidden;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .relative-z {
        position: relative;
        z-index: 2;
    }

    .hover-scale {
        transition: transform 0.2s;
    }

    .hover-scale:hover {
        transform: scale(1.05);
    }

    .hero-cards {
        position: relative;
    }

    .feature-card {
        padding: 1.5rem;
        border-radius: 1rem;
        width: 280px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(10px);
    }

    .icon-sq {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .bg-primary-light { background: #EEF2FF; }
    .bg-success-light { background: #F0FDF4; }
    .bg-warning-light { background: #FFFBEB; }

    .py-6 { padding-top: 5rem; padding-bottom: 5rem; }

    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
        border: 1px solid var(--border);
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-light);
    }

    .letter-spacing-1 { letter-spacing: 1px; }

    /* Floating Animations */
    .float-anim-1 { animation: float 6s ease-in-out infinite; }
    .float-anim-2 { animation: float 7s ease-in-out infinite 1s; }
    .float-anim-3 { animation: float 8s ease-in-out infinite 2s; }

    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }
</style>
