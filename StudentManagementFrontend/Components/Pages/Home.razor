@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Ana Sayfa - Öğrenci Otomasyon Sistemi</PageTitle>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold text-primary mb-4">
                        <i class="bi bi-mortarboard me-3"></i>
                        Öğrenci Otomasyon Sistemi
                    </h1>
                    <p class="lead mb-4">
                        Modern, kullanıcı dostu ve güvenli öğrenci yönetim sistemi. 
                        Öğrenci, öğretmen ve yönetici işlemlerini tek platformda yönetin.
                    </p>
                    
                    <AuthorizeView>
                        <Authorized>
                            <div class="d-flex gap-3">
                                <a href="/dashboard" class="btn btn-primary btn-lg">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    Dashboard'a Git
                                </a>
                                <a href="/profil" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-person-circle me-2"></i>
                                    Profilim
                                </a>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="d-flex gap-3">
                                <a href="/giris" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Giriş Yap
                                </a>
                                <a href="/kayit" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Kayıt Ol
                                </a>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="feature-cards">
                        <div class="feature-card">
                            <i class="bi bi-people-fill"></i>
                            <h5>Öğrenci Yönetimi</h5>
                            <p>Öğrenci bilgilerini kolayca yönetin</p>
                        </div>
                        <div class="feature-card">
                            <i class="bi bi-journal-bookmark-fill"></i>
                            <h5>Ders Yönetimi</h5>
                            <p>Ders programlarını organize edin</p>
                        </div>
                        <div class="feature-card">
                            <i class="bi bi-graph-up-arrow"></i>
                            <h5>Not Takibi</h5>
                            <p>Notları ve başarıyı takip edin</p>
                        </div>
                        <div class="feature-card">
                            <i class="bi bi-calendar-check-fill"></i>
                            <h5>Devamsızlık</h5>
                            <p>Devamsızlık kayıtlarını tutun</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3">Sistem Özellikleri</h2>
                <p class="lead text-muted">Modern eğitim yönetimi için ihtiyacınız olan tüm araçlar</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h5>Güvenli</h5>
                    <p>Verileriniz güvenli şifreleme ile korunur</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <div class="feature-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h5>Hızlı</h5>
                    <p>Modern teknoloji ile hızlı ve responsive</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item text-center">
                    <div class="feature-icon">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h5>Mobil Uyumlu</h5>
                    <p>Her cihazdan erişim imkanı</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">500+</h3>
                    <p class="text-muted">Aktif Öğrenci</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-success">50+</h3>
                    <p class="text-muted">Öğretmen</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-info">100+</h3>
                    <p class="text-muted">Ders</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-warning">1000+</h3>
                    <p class="text-muted">Kayıt</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/></svg>');
        background-size: cover;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .feature-cards {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        position: relative;
        z-index: 2;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        color: white;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card i {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: block;
    }

    .feature-card h5 {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .feature-card p {
        font-size: 0.9rem;
        opacity: 0.9;
        margin: 0;
    }

    .features-section {
        background: white;
    }

    .feature-item {
        padding: 2rem 1rem;
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 2rem;
    }

    .feature-item h5 {
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .feature-item p {
        color: #6c757d;
        margin: 0;
    }

    .stats-section {
        background: #f8f9fa;
    }

    .stat-item {
        padding: 1rem;
    }

    .stat-item h3 {
        margin-bottom: 0.5rem;
    }

    .stat-item p {
        font-weight: 500;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .feature-cards {
            grid-template-columns: 1fr;
            margin-top: 2rem;
        }
        
        .hero-content h1 {
            font-size: 2.5rem;
        }
    }
</style>
