@page "/ogrenci/ekle"
@using StudentManagementFrontend.Models
@using StudentManagementFrontend.Services
@using StudentManagementFrontend.Components.Shared
@inject StudentService StudentService
@inject NavigationManager Navigation
@inject ILogger<AddStudent> Logger

<PageTitle>Yeni Öğrenci Ekle</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Yeni Öğrenci Ekle</h2>
                </div>
                <div class="card-body">
                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                            <button type="button" class="btn-close float-end" @onclick="() => errorMessage = null" aria-label="Kapat"></button>
                        </div>
                    }

                    <StudentForm 
                        Student="student" 
                        SubmitButtonText="Kaydet"
                        OnSubmit="HandleValidSubmit"
                        OnCancel="NavigateToStudentList"
                    />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Student student = new() { DateOfBirth = DateTime.Today.AddYears(-18) };
    private string? errorMessage;

    private async Task HandleValidSubmit(Student student)
    {
        try
        {
            await StudentService.AddStudentAsync(student);
            Navigation.NavigateTo("/ogrenciler");
        }
        catch (Exception ex)
        {
            errorMessage = "Öğrenci eklenirken bir hata oluştu: " + ex.Message;
            Logger.LogError(ex, "Error adding student");
        }
    }

    private void NavigateToStudentList()
    {
        Navigation.NavigateTo("/ogrenciler");
    }
}
