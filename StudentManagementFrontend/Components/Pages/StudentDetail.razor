@page "/ogrenci/{Id:int}"
@page "/student-detail/{Id:int}"
@using StudentManagementFrontend.Models
@using StudentManagementFrontend.Services
@inject StudentService StudentService
@inject NavigationManager Navigation
@inject ILogger<StudentDetail> Logger

<PageTitle>Öğrenci Detayı</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center mt-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
    </div>
}
else if (student == null)
{
    <div class="alert alert-danger mt-4">
        Öğrenci bulunamadı.
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/ogrenciler">Öğrenciler</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@student.FullName</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Öğrenci Bilgileri</h2>
                        <div>
                            <button class="btn btn-warning me-2" @onclick="@(() => Navigation.NavigateTo($"/ogrenci/duzenle/{student.Id}"))">
                                <i class="bi bi-pencil"></i> Düzenle
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="NavigateToStudentList">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Ad Soyad:</label>
                                    <p class="form-control-plaintext">@student.FullName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">E-posta:</label>
                                    <p class="form-control-plaintext">@student.Email</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Telefon:</label>
                                    <p class="form-control-plaintext">@student.PhoneNumber</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Kayıt Tarihi:</label>
                                    <p class="form-control-plaintext">@student.EnrolledAt.ToString("dd/MM/yyyy")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Durum:</label>
                                    <span class="badge bg-success">Aktif</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    
    private Student? student;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudent();
    }

    private async Task LoadStudent()
    {
        try
        {
            isLoading = true;
            student = await StudentService.GetStudentByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading student with ID {StudentId}", Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToStudentList()
    {
        Navigation.NavigateTo("/ogrenciler");
    }
}