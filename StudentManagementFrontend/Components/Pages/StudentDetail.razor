@page "/ogrenci/{Id:int}"
@page "/student-detail/{Id:int}"
@using StudentManagementFrontend.Models
@using StudentManagementFrontend.Services
@inject StudentService StudentService
@inject ActivityService ActivityService
@inject DocumentService DocumentService
@inject NavigationManager Navigation
@inject ILogger<StudentDetail> Logger

<PageTitle>Öğrenci Detayı</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center mt-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
    </div>
}
else if (student == null)
{
    <div class="alert alert-danger mt-4">
        Öğrenci bulunamadı.
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/ogrenciler">Öğrenciler</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@student.FullName</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Öğrenci Bilgileri</h2>
                        <div>
                            <button class="btn btn-warning me-2" @onclick="NavigateToEdit">
                                <i class="bi bi-pencil"></i> Düzenle
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="NavigateToStudentList">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Ad Soyad:</label>
                                    <p class="form-control-plaintext">@student.FullName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">E-posta:</label>
                                    <p class="form-control-plaintext">@student.Email</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Telefon:</label>
                                    <p class="form-control-plaintext">@student.PhoneNumber</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Kayıt Tarihi:</label>
                                    <p class="form-control-plaintext">@student.EnrolledAt.ToString("dd/MM/yyyy")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Durum:</label>
                                    <span class="badge bg-success">Aktif</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm border-0">
                            <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                                <i class="bi bi-stars text-primary"></i>
                                <h3 class="h6 mb-0 fw-bold">Sosyal Aktiviteler & Hobiler</h3>
                            </div>
                            <div class="card-body p-0">
                                @if (activities == null)
                                {
                                    <div class="p-3 text-center"><div class="spinner-border spinner-border-sm" role="status"></div></div>
                                }
                                else if (!activities.Any())
                                {
                                    <div class="p-4 text-center text-muted small">Henüz aktivite bulunmuyor.</div>
                                }
                                else
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var a in activities)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                                <div>
                                                    <div class="fw-bold small">@a.Title</div>
                                                    <div class="text-muted" style="font-size: 0.75rem;">@a.Type • @a.ActivityDate.ToString("dd/MM/yyyy")</div>
                                                </div>
                                                <i class="bi @GetActivityIcon(a.Type) text-primary"></i>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4 shadow-sm border-0">
                            <div class="card-header bg-danger-subtle d-flex align-items-center gap-2">
                                <i class="bi bi-file-earmark-pdf text-danger"></i>
                                <h3 class="h6 mb-0 fw-bold">Sertifikalar ve Belgeler</h3>
                            </div>
                            <div class="card-body p-0">
                                @if (documents == null)
                                {
                                    <div class="p-3 text-center"><div class="spinner-border spinner-border-sm" role="status"></div></div>
                                }
                                else if (!documents.Any())
                                {
                                    <div class="p-4 text-center text-muted small">Henüz belge bulunmuyor.</div>
                                }
                                else
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var d in documents)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                                <div>
                                                    <div class="fw-bold small">@d.Title</div>
                                                    <div class="text-muted" style="font-size: 0.75rem;">@d.Type • @d.IssueDate.ToString("MMMM yyyy")</div>
                                                </div>
                                                <button class="btn btn-sm btn-outline-danger px-2 py-0" title="Görüntüle" @onclick="() => ViewDocument(d.FileUrl)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    
    private Student? student;
    private List<ActivityVm>? activities;
    private List<DocumentVm>? documents;
    private bool isLoading = true;

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadStudent();
            await LoadStudentExtras();
            StateHasChanged();
        }
    }

    private async Task LoadStudentExtras()
    {
        try
        {
            activities = await ActivityService.GetStudentActivitiesAsync(Id);
            documents = await DocumentService.GetStudentDocumentsAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading student extras for Id {Id}", Id);
        }
    }

    private async Task LoadStudent()
    {
        try
        {
            isLoading = true;
            student = await StudentService.GetStudentByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading student with ID {StudentId}", Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToEdit()
    {
        if (student != null)
        {
            Navigation.NavigateTo($"/ogrenci/duzenle/{student.Id}");
        }
    }

    private void NavigateToStudentList()
    {
        Navigation.NavigateTo("/ogrenciler");
    }

    private string GetActivityIcon(string type) => type switch
    {
        "Kitap" => "bi-book",
        "Spor" => "bi-trophy",
        "Sanat" => "bi-palette",
        "Bilim" => "bi-cpu",
        "Gönüllülük" => "bi-heart",
        _ => "bi-star"
    };

    private async Task ViewDocument(string url)
    {
        if (!string.IsNullOrEmpty(url) && url != "#")
        {
            await JSRuntime.InvokeVoidAsync("open", url, "_blank");
        }
    }
}