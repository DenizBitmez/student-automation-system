@page "/students"
@page "/ogrenciler"
@using StudentManagementFrontend.Models
@using StudentManagementFrontend.Services
@using Microsoft.AspNetCore.Authorization
@inject StudentService StudentService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize(Roles = "Admin,Teacher")]

<PageTitle>Öğrenci Listesi</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Öğrenci Listesi</h1>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-success" @onclick="ExportToCsv" disabled="@(!students?.Any() == true)">
                <i class="bi bi-download me-2"></i>
                CSV İndir
            </button>
            <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/ogrenci/ekle"))">
                <i class="bi bi-plus-circle me-2"></i> Yeni Öğrenci Ekle
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (students?.Any() == true)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Kayıt Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in students)
                            {
                                <tr>
                                    <td>@student.Id</td>
                                    <td>@student.FullName</td>
                                    <td>@student.Email</td>
                                    <td>@student.PhoneNumber</td>
                                    <td>@student.EnrolledAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="@(() => ViewStudent(student.Id))">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" @onclick="@(() => EditStudent(student.Id))">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="@(() => DeleteStudent(student.Id))">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h3 class="text-muted">Henüz öğrenci eklenmemiş</h3>
            <p class="text-muted">İlk öğrenciyi eklemek için yukarıdaki butonu kullanın.</p>
        </div>
    }
</div>

@code {
    private List<Student>? students;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            isLoading = true;
            students = (await StudentService.GetAllStudentsAsync()).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading students: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewStudent(int studentId)
    {
        Navigation.NavigateTo($"/student-detail/{studentId}");
    }

    private void EditStudent(int studentId)
    {
        Navigation.NavigateTo($"/edit-student/{studentId}");
    }

    private async Task DeleteStudent(int studentId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Bu öğrenciyi silmek istediğinizden emin misiniz?"))
        {
            try
            {
                var success = await StudentService.DeleteStudentAsync(studentId);
                if (success)
                {
                    await LoadStudents();
                    await JSRuntime.InvokeVoidAsync("alert", "Öğrenci başarıyla silindi.");
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Öğrenci silinirken bir hata oluştu.");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting student: {ex.Message}");
                await JSRuntime.InvokeVoidAsync("alert", "Öğrenci silinirken bir hata oluştu.");
            }
        }
    }

    private async Task ExportToCsv()
    {
        if (students?.Any() == true)
        {
            var csv = "ID,Ad Soyad,E-posta,Telefon,Kayıt Tarihi\n";
            foreach (var student in students)
            {
                csv += $"{student.Id},{student.FullName},{student.Email},{student.PhoneNumber},{student.EnrolledAt:dd/MM/yyyy}\n";
            }
            
            await JSRuntime.InvokeVoidAsync("downloadFile", "ogrenciler.csv", "text/csv", csv);
        }
    }
}