<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid ps-0">
        <a class="navbar-brand d-flex align-items-center gap-3" href="/">
            <div class="brand-icon bg-white text-primary rounded-3 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px; min-width: 40px;">
                <i class="bi bi-mortarboard-fill fs-5"></i>
            </div>
            <div class="brand-text lh-1">
                <div class="fw-bold fs-6">Öğrenci</div>
                <div class="small text-white-50" style="font-size: 0.75rem; letter-spacing: 0.5px;">OTOMASYON</div>
            </div>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>


<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <!-- Dashboard for all authenticated users -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/dashboard">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </NavLink>
                </div>

                <!-- Admin Navigation -->
                <AuthorizeView Roles="Admin" Context="adminContext">
                    <div class="nav-item px-3">
                        <div class="nav-link">
                            <i class="bi bi-shield-check me-2"></i>
                            <span>Yönetici Paneli</span>
                        </div>
                        <ul class="nav flex-column ms-4">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/ogrenciler">
                                    <i class="bi bi-people me-2"></i> Öğrenci Yönetimi
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/ogretmenler">
                                    <i class="bi bi-person-badge me-2"></i> Öğretmen Yönetimi
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/dersler">
                                    <i class="bi bi-journal-bookmark me-2"></i> Ders Yönetimi
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                </AuthorizeView>

                <!-- Teacher Navigation -->
                <AuthorizeView Roles="Teacher" Context="teacherContext">
                    <div class="nav-item px-3">
                        <div class="nav-link">
                            <i class="bi bi-mortarboard me-2"></i>
                            <span>Öğretmen Paneli</span>
                        </div>
                        <ul class="nav flex-column ms-4">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/dersler">
                                    <i class="bi bi-journal-text me-2"></i> Derslerim
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/ogrenciler">
                                    <i class="bi bi-people me-2"></i> Öğrencilerim
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                </AuthorizeView>

                <!-- Student Navigation -->
                <AuthorizeView Roles="Student" Context="studentContext">
                    <div class="nav-item px-3">
                        <div class="nav-link">
                            <i class="bi bi-person-video3 me-2"></i>
                            <span>Öğrenci Paneli</span>
                        </div>
                        <ul class="nav flex-column ms-4">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/dersler">
                                    <i class="bi bi-journal-text me-2"></i> Derslerim
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/dashboard">
                                    <i class="bi bi-journal-check me-2"></i> Notlarım
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                </AuthorizeView>
            </Authorized>
            <NotAuthorized>
                <!-- Navigation for Unauthenticated Users: Hidden as they should use the Landing Page / Login Page main actions -->
            </NotAuthorized>

        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}