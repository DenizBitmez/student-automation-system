<div class="chart-container">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@Title</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                Chart component is temporarily disabled. Data will be displayed here:
            </div>
            @if (Data.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Label</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Data)
                            {
                                <tr>
                                    <td>@item.Key</td>
                                    <td>@item.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No data available</p>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public Dictionary<string, double> Data { get; set; } = new();
    [Parameter] public string ChartType { get; set; } = "Line";
    [Parameter] public string[] BackgroundColors { get; set; } = Array.Empty<string>();
    [Parameter] public int Height { get; set; } = 400;

}