<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Otomasyon Sistemi</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <link href="~/css/app.css" rel="stylesheet" />
    <link href="/StudentManagementFrontend.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Hata:</strong> Uygulama yüklenirken bir hata oluştu.
            <a href="" class="reload btn btn-outline-danger btn-sm ms-2">Yeniden Yükle</a>
            <a class="dismiss btn btn-outline-secondary btn-sm ms-1">×</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Blazor Server -->
    <script src="/_framework/blazor.server.js"></script>
    
    <!-- Custom JavaScript Functions -->
    <script>
        window.downloadFile = (filename, contentType, content) => {
            const blob = new Blob([content], { type: contentType });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        };
    </script>
</body>
</html>
